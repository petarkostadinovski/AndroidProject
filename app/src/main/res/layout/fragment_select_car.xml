<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="400dp"
    android:layout_marginTop="130dp"
    android:layout_marginLeft="45dp"
    android:background="#A8D2D8ED"
    tools:context=".Activities.CarsActivity">

    <Spinner
        android:id="@+id/spinnerCarYear"
        android:layout_width="242dp"
        android:layout_height="24dp"
        android:layout_marginTop="184dp"
        android:entries="@array/spinnerCarYear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFilter" />

    <Spinner
        android:id="@+id/spinnerCarModel"
        android:layout_width="242dp"
        android:layout_height="24dp"
        android:layout_marginTop="52dp"
        android:entries="@array/spinnerCarModel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerCarBrand" />

    <TextView
        android:id="@+id/textViewFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Filter the keys by car"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerCarBrand"
        android:layout_width="242dp"
        android:layout_height="24dp"
        android:layout_marginTop="28dp"
        android:entries="@array/spinnerCarBrand"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFilter" />

    <Button
        android:id="@+id/buttonFilterByCar"
        android:layout_width="288dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:text="Filter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerCarYear" />


</androidx.constraintlayout.widget.ConstraintLayout>